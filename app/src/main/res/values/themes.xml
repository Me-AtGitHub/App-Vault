<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculater" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">#14141c</item>
    </style>

    <style name="Theme.Calculater" parent="Base.Theme.Calculater">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ThemeOverlay.Calculater.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="DialogStyle" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">80pt</item>
        <item name="android:windowMinWidthMinor">80pt</item>
    </style>

    <style name="DialogFragment" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">100pt</item>
        <item name="android:windowMinWidthMinor">100pt</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:colorControlHighlight">@android:color/white</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


</resources>